<?xml version='1.0' encoding='utf-8'?>
<plugin id="imageFilter" version="0.0.1"
 xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <name>FilterImage</name>

  <description>
    filter images for geolocation and DateTime
  </description>

  <js-module name="FilterImage" src="www/FilterImage.js">
    <clobbers target="cordova.plugins.FilterImage" />
  </js-module>

  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="FilterImage">
        <param name="android-package" value="0.1.FilterImage" />
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"></config-file>
    <source-file src="src/android/FilterImage.java" target-dir="src/0/1/FilterImage" />
  </platform>
</plugin>